html
    head
        title Signup on my awesome website!
        link(rel="stylesheet", href="/css/styles.css")
    body
        main
            if user
                div Bienvenue #{user.firstname + ' ' + user.lastname}
            h1  blog
                a(href="/login").btn.btn-block Se Connecter
                a(href="/article").btn.btn-block Ajouter un article
                    for article in articles
                        article
                            h1 #{article.title} #{article.votes.length}
                            form(method="post", action="/article/" + article.id + "/upvote")
                                button(type='submit') UpVote
                            form(method="post", action="/article/" + article.id + "/downvote")
                                button(type='submit') DownVote
